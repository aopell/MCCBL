<controls:MetroWindow x:Class="CBLServerWrapper.HelpWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      WindowTransitionsEnabled="False"
                      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
                      Background="{DynamicResource MaterialDesignPaper}"					  
                      Title="Help" Height="640" Width="800" Icon="console.ico">
    <controls:MetroWindow.Flyouts>
        <controls:FlyoutsControl>
            <controls:Flyout x:Name="LeftFlyout" Position="Left" Header="Settings">
            </controls:Flyout>
        </controls:FlyoutsControl>
    </controls:MetroWindow.Flyouts>
    <TabControl>
        <TabItem Header="STARTING YOUR SERVER">
            <Grid>
                <Rectangle Fill="#FF00BCD4" Height="75" Stroke="#FF00BCD4" VerticalAlignment="Top" Margin="-9,0"/>

                <Label x:Name="label" Content="Starting Your Server" Margin="10,0,146,0" FontFamily="Roboto" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Foreground="White" FontSize="36" Height="75" VerticalAlignment="Top"/>

            </Grid>
        </TabItem>
        <TabItem Header="MANAGING YOUR SERVER">
        </TabItem>
    </TabControl>
</controls:MetroWindow>